<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#d6d6d6" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#0675cd" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#198de7" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>